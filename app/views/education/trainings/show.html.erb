<section id="page-title">
  <div class="container clearfix">
    <h1><%= @training.name %></h1>
    <ol class="breadcrumb">
      <li><%= link_to t(".home"), education_root_path %></li>
      <li><%= link_to t(".trainings"), education_root_path %></li>
      <li class="active"><%= @training.name %></li>
    </ol>
  </div>
</section>

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="col_two_third portfolio-single-image nobottommargin">
        <a href="#"><img src="../../assets/images/portfolio/4/1.jpg"></a>
      </div>

      <div class="col_one_third portfolio-single-content col_last nobottommargin">
        <div class="fancy-title title-bottom-border">
          <h2><%= t ".training_info" %></h2>
        </div>
        <p><%= @training.description %></p>
        <br>
        <div class="fancy-title title-bottom-border">
          <h2><%= t ".techniques" %></h2>
        </div>
        <ul class="iconlist">
          <% @training.techniques.each do |technique| %>
            <li id="technique-item">
              <%= link_to "#" do %>
                <i class="icon-ok"></i> <%= technique.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <br>
        <div class="si-share clearfix">
          <span><%= t ".share" %>:</span>
          <div>
            <a href="#" class="social-icon si-borderless si-facebook">
              <i class="icon-facebook gray-color"></i>
              <i class="icon-facebook gray-color"></i>
            </a>
            <a href="#" class="social-icon si-borderless si-twitter">
              <i class="icon-twitter gray-color"></i>
              <i class="icon-twitter gray-color"></i>
            </a>
            <a href="#" class="social-icon si-borderless si-pinterest">
              <i class="icon-pinterest gray-color"></i>
              <i class="icon-pinterest gray-color"></i>
            </a>
            <a href="#" class="social-icon si-borderless si-gplus">
              <i class="icon-gplus gray-color"></i>
              <i class="icon-gplus gray-color"></i>
            </a>
            <a href="#" class="social-icon si-borderless si-rss">
              <i class="icon-rss gray-color"></i>
              <i class="icon-rss gray-color"></i>
            </a>
            <a href="#" class="social-icon si-borderless si-email3">
              <i class="icon-email3 gray-color"></i>
              <i class="icon-email3 gray-color"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="clear"></div>
      <div class="divider divider-center"><i class="icon-circle"></i></div>
      <h4><%= t ".related_courses" %>:</h4>

      <div id="related-portfolio" class="owl-carousel portfolio-carousel carousel-widget" data-margin="20" data-nav="false" data-autoplay="5000" data-items-xxs="1" data-items-xs="2" data-items-sm="3" data-items-lg="4">
        
        <div class="oc-item">
          <div class="iportfolio">
            <div class="portfolio-image">
              <a href="portfolio-single.html">
                <img src="images/portfolio/4/1.jpg" alt="Open Imagination">
              </a>
              <div class="portfolio-overlay">
                <a href="images/portfolio/full/1.jpg" class="left-icon" data-lightbox="image"><i class="icon-line-plus"></i></a>
                <a href="portfolio-single.html" class="right-icon"><i class="icon-line-ellipsis"></i></a>
              </div>
           </div>
            <div class="portfolio-desc">
              <h3><a href="portfolio-single.html">Open Imagination</a></h3>
             <span><a href="#">Media</a>, <a href="#">Icons</a></span>
            </div>
          </div>
        </div>
     </div>
    </div>
  </div>
</section>
