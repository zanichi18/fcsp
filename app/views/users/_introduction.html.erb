<div class="row">
  <div class="edit-profile-title">
    <h2><%= t ".introduction" %></h2>
  </div>
  <div class="edit-profile-button">
    <div class="btn-group">
      <button id="edit-introduction" class="btn btn-default btn-sm tip btn-responsive">
        <span class="icon-pencil2"></span>
        <%= t ".edit" %>
      </button>
      <button type="button" class="btn btn-default btn-sm tip btn-responsive dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
        <span class="icon-users"></span><span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to "#" do %>
            <span class="icon-user"> <%= t ".friends" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <span class="icon-users"> <%= t ".friends_of_friends" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <span class="icon-globe"> <%= t ".public" %></span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
<br>
<div class="introduction-content">
  <%= render "introduction_content" %>
</div>
