<% if posts.any? %>
  <% posts.each do |post| %>
    <div id="posts" class="small-thumbs">
      <div class="entry clearfix">
        <div class="entry-image post-thumb-image user-post-image">
          <%= image_tag post.image %>
        </div>
        <div class="entry-c">
          <div class="entry-title">
            <h2>
              <%= link_to user_post_path(post) do %>
                <%= post.title %>
              <% end %>
            </h2>
          </div>
          <ul class="entry-meta clearfix">
            <li><i class="icon-calendar3"></i>
              <%= l post.created_at, format: :date_month_year_concise %></li>
            <li>
              <%= link_to user_path(post.postable_id) do %>
                <i class="icon-user"></i> <%= user.name %>
              <% end %>
            </li>
            <li>
              <a href="#comments"><i class="icon-comments"></i>
                <%= post.comments_count %>
              </a>
            </li>
            <% if user_signed_in? %>
              <li>
                <span>
                  <% if shared_post? post %>
                    <%= link_to t(".unshare"), "#", class: "unshare-post",
                      data: {id: post.id} %>
                  <% else %>
                    <%= link_to t(".share"), "#", class: "share-post",
                      data: {id: post.id} %>
                  <% end %>
                </span>
              </li>
            <% end %>
          </ul>
          <div class="entry-content user-post-content">
            <p>
              <%= truncate strip_tags(post.content),
                length: Settings.post.max_length_truncate %>
            </p>
            <%= link_to user_post_path(post), class: "more-link" do %>
              <%= t ".read_more" %>
            <% end %>
            <% if user.is_user? current_user %>
              <%= link_to user_post_path(post), method: :delete, remote: true,
                data: {confirm: t(".confirm_delete")},
                class: "more-link more-link-delete-custom" do %>
                <%=  t ".delete" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="center">
    <%= paginate posts, param_name: "user_post_page" %>
  </div>
<% end %>
