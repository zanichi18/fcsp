<div class="content-wrap head-wrap">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= hidden_field_tag :company_id, @company.id %>
        <%= image_tag "avatar.jpg",
          class: "alignleft img-circle img-thumbnail notopmargin nobottommargin ava-company",
          alt: "Avatar" %>
        <div class="heading-block noborder">
          <h3><a><%= @company.name %></a></h3>
          <span>
            <a><%= @company.website %></a>
            <% if user_signed_in? %>
              <%= render "follow_form", company: @company %>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
