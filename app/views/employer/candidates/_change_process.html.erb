<% Candidate.processes.each do |process_type| %>
  <% if process_type.first == process %>
    <%= button_tag(class: "btn btn-basic btn-xs",
      data: {change:"#{process_type.first.first}"}) do %>
      <%= Candidate.human_enum_name :process, process_type.first %>
    <% end %>
  <% else %>
    <%= button_tag(class: "btn btn-#{process_type.first.first} btn-xs btn-change-process",
      data: {change:"#{process_type.first}"}) do %>
      <%= Candidate.human_enum_name :process, process_type.first %>
    <% end %>
  <% end %>
<% end %>
