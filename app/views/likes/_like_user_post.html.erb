<% if liked? post.id %>
  <%= link_to user_post_like_path(post, current_user), method: :delete, remote: true do %>
    <div class="">
    <i class="i-circled icon-thumbs-up liked-icon"></i>
    <br>
    <i class="like-counter">
      <%= t(".you_and_orthers_like",
        count: post.likes.count - Settings.like.one)%>
    </i>
    </div>
  <% end %>
<% else %>
  <%= link_to user_post_likes_path(post), method: :post, remote: true do %>
    <div class="like-icon">
    <i class="i-circled i-light icon-thumbs-up">
    </i>
    <br>
    <i class="like-counter">
      <%= t(".orthers_like", count: post.likes.count)%>
    </i>
    </div>
  <% end %>
<% end %>
