<%= simple_form_for [:user, post, Comment.new], remote: :true do |f| %>
  <div class="col-md-12">
    <div class="col-md-12">
    <div class="comment-from">
      </hr>
        <%= f.hidden_field :user_id, value: current_user.id %>
      </br>
      <%= f.text_area :content, placeholder: t(".content"), class: "sm-form-control",
        id: "content" %>
        <br/>
      <%= f.submit t(".submit_button"), class: "button button-3d nomargin" %>
    </div>
    </div>
  </div>
<% end %>
